<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.grace.readeasy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.grace.readeasy.ReadEasyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/read_easy"
        android:label="@string/app_name"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">


        <activity
            android:name="com.grace.readeasy.MainActivity"
            android:exported="true"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.grace.readeasy.SignupActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name="com.grace.readeasy.DashboardActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name="com.grace.readeasy.LetterRecognitionActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name="com.grace.readeasy.PhonicsActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name="com.grace.readeasy.ProgressActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name="com.grace.readeasy.SettingsActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name="com.grace.readeasy.WordReadingActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />





    </application>

</manifest>